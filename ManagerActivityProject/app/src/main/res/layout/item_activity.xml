<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="15dp"
    >
    <RelativeLayout
        android:id="@+id/rlItemManagerActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

 <!--
   androidx.cardview.widget.CardView
   <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgManagerActivity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cat"
            app:riv_corner_radius="12dp" />
     -->
       <androidx.cardview.widget.CardView
           android:id="@+id/cardViewManagerActivity"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="8dp"
            app:cardCornerRadius="12dp">
           <ImageView
               android:id="@+id/imgManagerActivity"
               android:layout_width="120dp"
               android:layout_height="120dp"
               android:scaleType="centerCrop"
               android:src="@color/purple_200"
               />
       </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvManagerTitleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/cardViewManagerActivity"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvManagerQuantityActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/tvManagerTitleActivity"
            android:layout_toEndOf="@+id/cardViewManagerActivity"
            android:text="Quantity"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>